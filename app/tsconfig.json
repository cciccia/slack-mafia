{
    "compilerOptions": {
        "outDir": "build",
        "target": "es6",
        "module": "commonjs",
        "rootDir": ".",
        "moduleResolution": "node",
        "sourceMap": true,
        "typeRoots": ["node_modules/@types"],
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "lib": ["es2017"]
    },
    "include": [
        "src/**/**.ts",
        "test/**/**.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}